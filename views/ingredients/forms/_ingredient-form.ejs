<form action="/ingredients/create" method="POST" style="margin-bottom: 30px;">
  <fieldset>
    <legend>Ajouter un ingrédient</legend>
    <label>Nom :</label>
    <input type="text" name="name" required><br><br>

    <label>Quantité de référence :</label>
    <input type="number" step="0.01" name="quantite_reference" required>
    <select name="unite" required>
      <option value="unite">unite</option>  
      <option value="kg">kg</option>
      <option value="g">g</option>
      <option value="L">L</option>
      <option value="ml">ml</option>
    </select><br><br>

    <label>Prix pour cette quantité (MGA) :</label>
    <input type="number" name="prix_unitaire" required><br><br>

    <button type="submit">Ajouter</button>
  </fieldset>
</form>