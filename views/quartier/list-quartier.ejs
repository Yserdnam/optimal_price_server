<%- include('../header', { title: 'Quartier' }) %>

<main class="container pb-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
      <i class="fas fa-map-marker-alt me-2 text-primary"></i>Gestion des quartiers
    </h1>
    <a href="/quartiers/create" class="btn btn-primary">
      <i class="fas fa-plus me-1"></i>Nouveau quartier
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body p-0">
      <% if (quartiers && quartiers.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th scope="col">Nom du quartier</th>
                <th scope="col" class="text-center">Poids</th>
                <th scope="col" class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% quartiers.forEach(quartier => { %>
                <tr>
                  <td class="fw-bold">
                    <i class="fas fa-map-marker-alt text-muted me-2"></i>
                    <%= quartier.nom %>
                  </td>
                  <td class="text-center">
                    <span class="badge bg-info fs-6"><%= quartier.poids %></span>
                  </td>
                  <td class="text-center">
                    <div class="btn-group btn-group-sm" role="group">
                      <a href="/quartiers/edit/<%= quartier._id %>" class="btn btn-outline-primary m-1">
                        <i class="fas fa-edit me-1"></i>
                      </a>
                      <form action="/quartiers/delete/<%= quartier._id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger m-1" 
                                onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce quartier ?')">
                          <i class="fas fa-trash-alt me-1"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="text-center py-5">
          <div class="py-4">
            <i class="fas fa-map-marker-alt fa-3x text-muted mb-3"></i>
            <h3 class="h5 text-muted">Aucun quartier enregistré</h3>
            <p class="text-muted">Commencez par créer votre premier quartier</p>
            <a href="/quartiers/create" class="btn btn-primary mt-2">
              <i class="fas fa-plus me-1"></i>Créer un quartier
            </a>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <% if (quartiers && quartiers.length > 0) { %>
    <div class="alert alert-info mt-4">
      <div class="d-flex">
        <div class="me-3">
          <i class="fas fa-info-circle fa-2x"></i>
        </div>
        <div>
          <h5 class="alert-heading">Information sur les poids</h5>
          <p class="mb-0">
            Le poids d'un quartier influence son importance dans les calculs statistiques. 
            Plus le poids est élevé, plus le quartier est considéré comme important.
          </p>
        </div>
      </div>
    </div>
  <% } %>
</main>

<%- include('../footer') %>